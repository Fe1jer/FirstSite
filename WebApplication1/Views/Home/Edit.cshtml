@model ChangeNewsViewModel
@{
    ViewData["Title"] = "Изменение новости";
}
@section Css{
    <link rel="stylesheet" href="~/css/StyleSheet1.css" type="text/css" asp-append-version="true" />
}
<h4>@ViewData["Title"]</h4>
<hr />
<main>
    <form asp-action="Edit" class="row" enctype="multipart/form-data">
        <div id="form" class="col-lg-8 row mt-0 gy-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mt-0"></div>
            <div class="col-5 form-group mt-0">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12 form-group">
                <label asp-for="Img" class="control-label"></label>
                <div class="w-100 text-center">
                    <img style="object-fit: cover; height: 350px; width: 85%; " src="@Html.DisplayFor(model => model.Img)" alt="@Html.DisplayFor(model => model.Name)" />
                </div>
                <input asp-for="FileImg" type="file" class="form-control w-auto" />
                <span asp-validation-for="FileImg" class="text-danger"></span>
            </div>
            <div class="col-12 form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="col-12 row mt-3">
                <div id="caruselDiv" class="col-lg-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input id="caruselCheck" class="form-check-input" asp-for="IsCaruselNews" /> @Html.DisplayNameFor(model => model.IsCaruselNews)
                        </label>
                    </div>
                    <div id="favImgDiv" class="form-group mt-3" style="display:none">
                        <label asp-for="FavImg" class="control-label"></label>
                        <div class="w-100 text-center">
                            <img style="object-fit: cover; height: 350px; width: 85%; " src="@Html.DisplayFor(model => model.FavImg)" alt="@Html.DisplayFor(model => model.FavImg)" />
                        </div>
                        <input asp-for="FileFavImg" type="file" class="form-control w-auto" />
                        <span asp-validation-for="FileFavImg" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input id="productCheck" class="form-check-input" asp-for="IsProductHref" /> @Html.DisplayNameFor(model => model.IsProductHref)
                        </label>
                    </div>
                </div>
            </div>
            <div id="textDiv" class="col-12 form-group">
                <label asp-for="Text" class="form-label"></label>
                <div class="input-group">
                    <textarea class="w-100" asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div id="productList" style="display:none;" class="col-lg-4">
            <div class="search_box" id="search_box__news">
                <div id="selectedProduct"></div>
                <input class="form-control" type="text" name="search" id="search__news" autocomplete="off" aria-label="Search" placeholder="Введите название товара">
                <div id="search_box-result"></div>
            </div>
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#Edit">
                Изменить новость
            </button>
        </div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ProductHref" id="ProductHref" />
        <input type="hidden" asp-for="FavImg" />
        <input type="hidden" asp-for="Img" />
        <div class="modal fade" id="Edit" tabindex="-1" aria-labelledby="Edit" style="display: none;" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="Edit">Изменить новость</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Перед тем как изменить новость, проверьте правильность заполнения всех ячеек описания продукта
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-primary">Изменить</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>
<div class="">
    <a asp-action="News">Назад</a>
</div>
@section Scripts{
    <script type="text/javascript" src="~/js/modules/news.js"></script>
}