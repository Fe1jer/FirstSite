@model ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-check">
        @foreach (Role role in Model.AllRoles)
        {
            <input class="form-check-input" type="radio" name="role" id="@role.Id" value="@role.Name"
                   @(Model.UserRole.Name == role.Name ? "checked" : "") />
            <label class="form-check-label" for="@role.Id">
                @role.Name
            </label>
            <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>