@model List<User>
@{
    ViewData["Title"] = "Список пользователей";
}
<form asp-controller="Roles" asp-action="UserList" class="input-group mt-3">
    <div class="form-outline">
        <input class="form-control" type="search" name="search" placeholder="Поиск" aria-label="Search">
    </div>
    <button class="btn btn-outline-success" type="submit">Поиск</button>
</form>

<h2 class="mt-4">@ViewData["Title"]</h2>

@{
    string role = "";
    foreach (User user in Model)
    {
        @if (role != user.Role.Name)
        {
            role = user.Role.Name;
            <h5 class="text-danger">@role</h5>
        }
        string style = "";
        if (user.EmailConfirmed == false && user.LockoutEnd < DateTime.Now)
        {
            style = "background: orangered;";
        }
        <div class="d-flex justify-content-between" style="@style">
            <div class="row">
                <p>
                    @user.Email
                </p>
            </div>
            <a class="mx-3 btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
        </div>
        <hr style="margin: 0.4rem 0;" />
    }
}