@model ProductsListViewModel
@{
    ViewData["Title"] = "Все товары";
}
@section Css{
    <link rel="stylesheet" href="~/css/StyleSheet1.css" type="text/css" asp-append-version="true" />
}
<div class="row">
    <div class="navbar navbar-expand-lg navbar-light bg-light p-2 shadow">
        <h2>Все товары @Model.AllProducts.Count()</h2>
        <button class="navbar-toggler position-sticky d-lg-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="filterHeader" class="w-100">
            @await Html.PartialAsync("FilterHeaderPartial", Model)
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-lg-2 d-lg-block sidebar collapse" style="padding:0">
                @using (Html.BeginForm("Index", "Catalog", FormMethod.Get))
                {
                    @await Html.PartialAsync("ProductsFilterPartial", Model)
                }
            </nav>
            <main class="ps-lg-4 pe-lg-0 col-lg-10 mt-2" style="position: relative">
                <div id="content" class="row">
                    @if (Model.AllProducts.Count() != 0)
                    {
                        foreach (ShowProductViewModel showProduct in Model.AllProducts)
                        {
                            @await Html.PartialAsync("ProductCardPartial", showProduct)
                        }
                    }
                    else
                    {
                        <h2 class="text-center mt-3" style="white-space: normal;">Результат поиска"нет товаров"</h2>
                    }
                </div>
                <div id="loaderDiv" class="loading" style="display: none"></div>
            </main>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" async></script>
    <script src="~/js/modules/checkboxFilter.js"></script>
    <script src="~/js/modules/products.js"></script>
    <script src="~/js/modules/shopCart.js"></script>
    <script>
            var isAdminOrModer = '@(User.IsInRole("admin") || User.IsInRole("moderator"))';
    </script>
}