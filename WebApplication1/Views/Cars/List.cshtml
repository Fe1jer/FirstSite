@model CarsListViewModel
<html translated-ltr>
<head>
    <link rel="stylesheet" href="~/css/StyleSheet1.css" type="text/css" />
</head>
<body>
    <div class="pt-5 mt-2 row">
        <header class="navbar navbar-expand-lg navbar-light bg-light rounded flex-md-nowrap p-2 shadow">
            <h2 class="">Все автомобили</h2>
            <button class="navbar-toggler position-sticky d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @{ 
                if (Model.CurrCategory != "")
                {
                        <div class="w-100">
                            <div class="schema-tags__item" data-bind="click: $root.removeTag.bind($root, tag), attr: {title: tag.facet.name}" title="Тип двигателя" id="l0_b1">
                                <span class="navbar-nav schema-tags__text">@Model.CurrCategory</span>
                            </div>
                        </div>
                    }
                }

        </header>
        <div class="container-fluid" style="padding-left: 0px;">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block  sidebar collapse">
                    <div class="position-sticky pt-3 bg-light">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/Cars/List">
                                    <img class="i" src="/img/icon/AllCars.png">
                                    Все автомобили
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/Cars/List/Electro">
                                    <img class="i" src="/img/icon/Electro.png">
                                    Электромобили
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Cars/List/Fuel">
                                    <img class="i" src="/img/icon/Fuel.png">
                                    Автомобили с ДВС
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div class="row mt-3">
                        @{
                            foreach (Car car in Model.AllCars)
                            {
                                @Html.Partial("AllCars", car)
                            }
                        }
                    </div>
                </main>
            </div>
        </div>
    </div>

    <hr class="featurette-heading">
    <footer class="container">
        <p class="float-end"><a href="#">Подняться</a></p>
        <p>© 2021 Company, Inc. · <a href="#">Конфендициальность</a> · <a href="#">Условия</a></p>
    </footer>
</body>
</html>
