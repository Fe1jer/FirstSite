<h1>Все автомобили</h1>
<h3>@Model.CurrCategory</h3>
<div class="row mt-3 mb-2">
    @{
        foreach (var car in Model.AllCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail h-50 w-100" src="@car.img" alt="@car.Name" />
                <h2>Модель: @car.Name</h2>
                <p>@car.ShortDesc</p>
                <p>Цена: @car.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</p>
                <p><a class="btn btn-warning" href="#">Подробнее</a></p>
            </div>
            }
        }
</div>