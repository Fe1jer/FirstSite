@model OrderViewModel
<div class="container mt-5 pt-5">
    <main>
        <div class="row g-3">
            <div class="col-md-5 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ваша корзина</font></font></span>
                    <span class="badge bg-secondary rounded-pill"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Model.ShopCart.ListShopItems.Count</font></font></span>
                </h4>
                <ul class="list-group mb-3">
                    @{
                        int sum = 0;
                        foreach (var el in Model.ShopCart.ListShopItems)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@el.Product.Name</font></font></h6>
                                    <small class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@el.Product.Category.CategoryName</font></font></small>
                                </div>
                                <span class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@el.Product.Price.ToString("C0", CultureInfo.CreateSpecificCulture("en-US"))</font></font></span>
                            </li>
                            sum += el.Product.Price;
                        }
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Итого</font></font></span>
                        <strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@sum.ToString("C0", CultureInfo.CreateSpecificCulture("en-US"))</font></font></strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Промо код">
                        <button type="submit" class="btn btn-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Выкупать</font></font></button>
                    </div>
                </form>
            </div>
            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Платежный адрес</font></font></h4>
                <form asp-action="Checkout" method="post" class="form-horizontal">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label asp-for="Order.Name" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Name" class="form-control" />
                                <span asp-validation-for="Order.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="Order.Surname" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Surname" class="form-control" />
                                <span asp-validation-for="Order.Surname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Order.UserName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@@</font></font></span>
                                <input asp-for="Order.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="Order.UserName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Order.Email" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Email" class="form-control" />
                                <span asp-validation-for="Order.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Order.Adress" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Adress" class="form-control" />
                                <span asp-validation-for="Order.Adress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Order.Phone" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Phone" class="form-control" />
                                <span asp-validation-for="Order.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <label for="country" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Страна</font></font></label>
                            <select class="form-select" id="country" required="">
                                <option value=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Выберите...</font></font></option>
                                <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Соединенные Штаты</font></font></option>
                            </select>
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Пожалуйста, выберите действительную страну.
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label for="state" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">состояние</font></font></label>
                            <select class="form-select" id="state" required="">
                                <option value=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Выберите...</font></font></option>
                                <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Калифорния</font></font></option>
                            </select>
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Укажите действительное состояние.
                                    </font>
                                </font>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Order.Zip" class="form-label"></label>
                            <div>
                                <input asp-for="Order.Zip" class="form-control" />
                                <span asp-validation-for="Order.Zip" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="same-address">
                        <label class="form-check-label" for="same-address"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Адрес доставки такой же, как мой платежный адрес</font></font></label>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="save-info">
                        <label class="form-check-label" for="save-info"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Сохраните эту информацию для следующего раза</font></font></label>
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Оплата</font></font></h4>

                    <div class="my-3">
                        <div class="form-check">
                            <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required="">
                            <label class="form-check-label" for="credit"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Кредитная карта</font></font></label>
                        </div>
                        <div class="form-check">
                            <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required="">
                            <label class="form-check-label" for="debit"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Дебетовая карточка</font></font></label>
                        </div>
                        <div class="form-check">
                            <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required="">
                            <label class="form-check-label" for="paypal"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">PayPal</font></font></label>
                        </div>
                    </div>

                    <div class="row gy-3">
                        <div class="col-md-6">
                            <label asp-for="Order.CCName" class="form-label"></label>
                            <div>
                                <input asp-for="Order.CCName" class="form-control" />
                                <span asp-validation-for="Order.CCName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Order.CCNumber" class="form-label"></label>
                            <div>
                                <input asp-for="Order.CCNumber" class="form-control" />
                                <span asp-validation-for="Order.CCNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Order.CCExpiration" class="form-label"></label>
                            <div>
                                <input asp-for="Order.CCExpiration" class="form-control" />
                                <span asp-validation-for="Order.CCExpiration" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Order.CCCVV" class="form-label"></label>
                            <div>
                                <input asp-for="Order.CCCVV" class="form-control" />
                                <span asp-validation-for="Order.CCCVV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Продолжить оформление заказа</font></font></button>
                </form>
            </div>
        </div>
    </main>
    <hr class="featurette-heading">
    <footer class="container">
        <p class="float-end"><a href="#">Подняться</a></p>
        <p>© 2021 Company, Inc. · <a href="#">Конфендициальность</a> · <a href="#">Условия</a></p>
    </footer>
</div>