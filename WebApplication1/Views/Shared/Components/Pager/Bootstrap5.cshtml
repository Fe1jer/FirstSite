@model ReflectionIT.Mvc.Paging.IPagingList

@* Fake Boostrap 5 based pager *@

@{
    var start = this.Model.StartPageIndex;
    var stop = this.Model.StopPageIndex;
}

@if (this.Model.PageCount > 1)
{
    <ul class="pagination pagination-sm justify-content-end">
        @if (this.Model.PageIndex > 1)
        {
            <li class="page-item">
                <a onclick="changePage(@(this.Model.PageIndex - 1))" style="cursor: pointer;" aria-label="Previous" class="page-link">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = start; i <= stop; i++)
        {
            <li class="page-item @((Model.PageIndex == i) ? "active" : null)">
                <a onclick="changePage(@i.ToString())" style="cursor: pointer;" aria-label="Previous" class="page-link">
                    @i.ToString()
                </a>
            </li>
        }
        @if (this.Model.PageIndex < this.Model.PageCount)
        {
            <li class=" page-item">
                <a onclick="changePage(@(this.Model.PageIndex + 1))" aria-label="Next" class="page-link" style="cursor: pointer;">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
}