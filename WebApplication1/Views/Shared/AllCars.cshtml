@model Car
<div class="col-lg-4 mt-2 mb-4">
    <div class="scale">
        <img class="scale card-img-top" height="230" src="@Model.img" alt="@Model.Name" />
    </div>
    <div class="card-body shadow-sm border-1">
        <h4>Модель: @Model.Name</h4>
        <p>@Model.ShortDesc</p>
        <p>Цена: @Model.Price.ToString("C0", CultureInfo.CreateSpecificCulture("en-US"))</p>
        <h3><a class="btn btn-outline-warning" href="#">Подробнее</a></h3>
    </div>
</div>

