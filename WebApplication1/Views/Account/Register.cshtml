                        <div class="col-lg-12 text-center mt-4">
                        Already have an account? <a href="#" class="text-danger">Sign In</a>
                        </div>
                        </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    @section Scripts{
    <script src="~/js/modules/slider-radio.js" asp-append-version="true"></script>
}